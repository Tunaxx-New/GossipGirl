<html>
  <head>
    <title>Gossip Girl</title>
    <link href="index.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonym
  </head>
  <body>
    <div class="header">
    <h1><i class="fa-solid fa-lips" style="color: pink;"></i> Welcome <%= uname %> to backend development of Gossip Girl!</h1>
    </div>
    <form action="/login" method="get">
      <button type="submit">Sign In</button>
    </form>
    <form action="/register" method="get">
      <button type="submit">Sign Up</button>
    </form>
    <form action="/changeMessage" method="post">
      <input type="text" placeholder="Change your message" name="message"></input>
      <button type="submit">Change</button>
    </form>

    <table>
      <tr>
        <th class="title">Gossip girls (<%=table.length%>):</th>
      </tr>
      <% for (var i = 0; i < table.length; i++) { %>
      <tr>
        <td><%= table[i].uname %> </td>
	  </tr>
	  <tr>
        <td class="messageBox"><i class="fa-solid fa-message" style="color: white;"></i> <%= table[i].message %></td>
        <td class="likeBox"><i class="fa-solid fa-heart" style="color: black;"></i> <%= table[i].likeCount %></td>
        <td>
          <form action="/like" method="post">
          <input class="invisible" type="text" value="<%=table[i].uname%>" name="target">
          <button class="likeButton" type="submit">Like</button>
          </form>
        </td>
	  </tr>
      <% }; %>
    </table>

  </body>
</html>
