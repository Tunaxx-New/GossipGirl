<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Page</title>
    <link rel="stylesheet" href="AdminPageCss.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>

<div class="container-flex main">
    <div class="row">
        <div class="col-3">
            <!--эта штука для имени админа-->
            <div class="adminName">
                <div>
                    <img width="50px" height="50px" src="/AdminIcon.png"> <%= username%>
                    <div class="SortingDiv">
                        <a>Sort by Name</a><br>
                        <a>Sort by City</a>
                    </div>

                </div>
            </div>
            <div class="AddNewPerson">
                <h4>Add new user</h4>
                <form><!--action="тут ссылка на добавление персонажа"-->
                    <div>
                        Name
                        <input name="NewUserName" value="Enter the Name">
                    </div>
                    <div>
                        City
                        <input name="NewUserCity" value="Enter the City">
                    </div>
                    <div>
                        Email
                        <input name="NewUserEmail" value="Enter the Email">
                    </div>
                    <div>
                        Password
                        <input name="NewUserPassword" value="Enter the Password">
                    </div>
                    <div>
                        Admin privilege
                        <input name="NewUserPrivilege" value="(true/false)">
                    </div>
                    <hr>
                    <button class="btn ButtonPink" type="submit">Submit</button>
                </form>
            </div>
        </div>
        <div class="col PersonalInfo">
            <table class="table table-borderless">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>
                        Name
                    </th>
                    <th>
                        City
                    </th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Admin</th>
                </tr>
                </thead>
                <tbody>
                <%for(var i=0;i<users.length;i++){%>
                <tr>
                    <th class="ThId"><%= i+1%></th>
                    <form action="/changeUser" method="post">
                        <td><input name="username" value="<%=users[i].username%>"></td>
                        <td><input name="city" value="<%=users[i].city%>"></td>
                        <td><input name="email" value="<%=users[i].email%>"></td>
                        <td><input name="password" value="<%=users[i].password%>"></td>
                        <td><input name="isAdmin" value="<%=users[i].admin%>"></td>
                        <td>
                            <input name="idishnik" value="<%=users[i]._id%>" hidden>
                            <button class="btn ButtonPink"  type="submit">Change</button>
                        </td>
                    </form>
                    <td>
                        <form action="/deleteUser" method="post">
                            <input name="idishnik" value="<%=users[i].id%>" hidden>
                            <button class="btn ButtonGray"  type="submit">delete</button>
                        </form>
                    </td>
                </tr>
                <%}%>

                </tbody>
            </table>
        </div>
    </div>
</div>


</body>