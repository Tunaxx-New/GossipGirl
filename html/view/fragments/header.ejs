<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Gossip girl</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/header.css" type="text/css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/520e072e3a.js" crossorigin="anonymous"></script>
    <script>
        function resizeIframe(obj) {
            obj.style.height = obj.contentWindow.document.documentElement.scrollHeight.toString() + 'px';
        }
    </script>
    <link href="./commonStyle.css" type="text/css" rel="stylesheet">
</head>
<body>
<header class="p-3 border-bottom">
    <div class="container">
        <div class="flex-wrap align-items-center justify-content-center">
            <div class="row">
            <div class="row">
            <div class="col">
            <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
                <img src="https://cdn.discordapp.com/attachments/851165493942812702/966417334166224896/ddd.png" alt="LOGO" width="78" height="auto"> <use xlink:href="#bootstrap"></use>
            </a>
            </div>

            <div class="col">
                <span id="postButton" style="vertical-align: middle"><a href="/createPost"></a></span>
                <!--<button class="button2"><i class="fa-solid fa-plus"></i></button>-->
            </div>

            <div class="col">
            <!-- Drop down popup -->
            <div class="dropdown text-end">
                <% if (user.title) { %>
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/avatar?src=profile" alt="mdo" class="avatar">
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1" id="profilesButtons">
                        <li><a class="dropdown-item" href="/login">Login</a></li>
                        <li><a class="dropdown-item" href="/register">Sign Up</a></li>
                    </ul>
                <% } else { %>
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img class="avatar" src="/avatar?src=<%=user.login%>&ext=<%=user.avatarExtension%>" alt="mdo">
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1" id="profilesButtons">
                        <li><a class="dropdown-item" href="/profile">Profile</a></li>
                        <% if (user.isAdmin) { %>
                        <li><a class="dropdown-item" href="/adminPage">Admin page</a></li>
                        <% } %>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/signout">Sign out</a></li>
                    </ul>
                <% } %>
            </div>
            </div>

            </div>
        </div>
    </div>
</header>
<script>
var menu = document.getElementById('profilesButtons')
document.getElementById('dropdownUser1').addEventListener('click', () => {
    if (menu.style.display === 'none' || menu.style.display === '')
        menu.style.display = 'block'
    else
        menu.style.display = 'none'
})
</script>
</body>