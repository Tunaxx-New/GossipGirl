<head>
    <meta charset="UTF-8">
    <title>Admin Page</title>
    <link rel="stylesheet" href="/admin">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .align-middle {
            padding: 8px!important;
        }
        html, body {
            margin: 0;
            height: 100%;
        }
    </style>
    <link href="./commonStyle.css" type="text/css" rel="stylesheet">
</head>
<table class="">
    <tbody>
    <% for (var i = 0; i < users.length; i++){ %>
        <tr>
            <th class="align-middle"><%=id[i]%></th>
            <th class="align-middle"><img class="avatar" src="/avatar?src=<%=users[i].login%>&ext=<%=users[i].avatarExtension%>" alt="mdo"></th>
            <th class="align-middle">
                <div><%=users[i].login%></div>
                <div><%=users[i].name%></div>
            </th>

            <form action="/addFriend" method="get">
                <td class="align-middle">
                    <input class="form-label" name="friend" value="<%=users[i].login%>" hidden>
                    <button class="btn ButtonPink" type="submit">add</button>
                </td>
            </form>
        </tr>
    <%}%>

    </tbody>
</table>