<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Answer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/chat.css" type="text/css" rel="stylesheet">
</head>
<body>

<div>
    <input id="search" type="text" name="friend" value="">
    <span>
        <button onclick="searchGet(-1, 0);"><</button>
        <button onclick="searchGet(1, 0);">></button>
    </span>
</div>
<iframe src="/searchFriend?word=''&page=0&count=10"></iframe>

<script>
    var iframe = document.getElementsByTagName('iframe')[0]
    var page = 0
    var prevWord = ''
    function searchGet(increment, word)
    {
        if (word == 0)
            word = prevWord
        prevWord = word
        page += increment
        if (page < 0) {
            page = 0
        }
        let count = 10
        iframe.src = "/searchFriend?word=" + word.toString() + "&page=" + page.toString() + "&count=" + count.toString()
    }

    const searchInput = document.getElementById('search')
    searchInput.addEventListener('change', () => {
        searchGet(0, searchInput.value)
    })
</script>

</body>