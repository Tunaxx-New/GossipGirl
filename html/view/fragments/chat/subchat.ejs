<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Answer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/chat.css" type="text/css" rel="stylesheet">
    <link href="./commonStyle.css" type="text/css" rel="stylesheet">
</head>
<body>

<button onclick="append();">Load more</button>
<div id="chat">

</div>

<form method="post" action="/sendMessage">
<input text="text" value="<%=friend%>" name="friend" hidden>
<input text="text" name="src">
<button type="submit">Send</button>
</form>

<script>
    var lastMessage = <%=lastMessage%>

    function httpGet(theUrl)
    {
        var xmlHttp = new XMLHttpRequest()
        xmlHttp.open("GET", theUrl, false)
        xmlHttp.send(null)
        return xmlHttp.responseText
    }

    const chat = document.getElementById('chat')
    function append() {
        let message = document.createElement('p')
        lastMessage--
        if (lastMessage < 0) {
            lastMessage = 0
            return
        }
        console.log(lastMessage)
        message.innerHTML = httpGet("/subchat?index=" + parseInt(lastMessage) + "&friend=<%=friend%>")
        chat.insertBefore(message, chat.firstChild)
    }
    append()
</script>

</body>