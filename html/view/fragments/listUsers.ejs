<head>
    <meta charset="UTF-8">
    <title>Admin Page</title>
    <link rel="stylesheet" href="/admin">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="./commonStyle.css" type="text/css" rel="stylesheet">
</head>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th></th>
        <th>Name</th>
        <th>City</th>
        <th>Email</th>
        <th>Password</th>
        <th>Admin</th>
    </tr>
    </thead>
    <tbody>
    <% for (var i = 0; i < users.length; i++){ %>
        <tr>
            <th class="ThId align-middle"><%=id[i]%></th>

            <td class="align-middle">
                <a href="#" class="d-block link-dark text-decoration-none">
                    <img class="avatar" src="/avatar?src=<%=users[i].login%>&ext=<%=users[i].avatarExtension%>" alt="mdo">
                </a>
            </td>

            <form action="/userAction" method="post">
                <td class="align-middle"><input name="username" value="<%=users[i].login%>" class="form-control"></td>
                <td class="align-middle"><input name="city" value="<%=users[i].city%>" class="form-control"></td>
                <td class="align-middle"><input name="email" value="<%=users[i].email%>" class="form-control"></td>
                <td class="align-middle"><input name="password" value="<%=users[i].password%>" class="form-control"></td>
                <td class="align-middle"><input name="isAdmin" value="<%=users[i].isAdmin%>" class="form-control"></td>
                <td class="align-middle">
                    <input class="form-label" name="key" value="2" hidden>
                    <input class="form-label" name="Id" value="<%=users[i]._id%>" hidden>
                    <button class="btn ButtonPink"  type="submit">Change</button>
                </td>
            </form>
            <td class="align-middle">
                <form action="/userAction" method="post">
                    <input class="form-label" name="key" value="3" hidden>
                    <input class="form-label" name="Id" value="<%=users[i].id%>" hidden>
                    <button class="btn ButtonGray"  type="submit">Delete</button>
                </form>
            </td>
        </tr>
    <%}%>

    </tbody>
</table>