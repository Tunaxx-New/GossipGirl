<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Answer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="index.css" type="text/css" rel="stylesheet">
  </head>
  <script>
    function fill(field, text) {
      field.innerHTML = text
    }
    function resizeIframe(obj) {
      console.log(obj.contentWindow.document.documentElement.scrollHeight.toString(), 999)
      obj.style.height = obj.contentWindow.document.documentElement.scrollHeight.toString() + 'px';
    }
  </script>
  <script>
    function httpGet(theUrl)
    {
      var xmlHttp = new XMLHttpRequest()
      xmlHttp.open("GET", theUrl, false)
      xmlHttp.send(null)
      return xmlHttp.responseText
    }
    function noComments(element, id, parent) {
      const err = httpGet("/getAnswers?postId=" + id.toString() + "&parent=" + parent + "&level=<%=level%>")
      if (<%=show%>)
        loadMoreComments(element, id, parent, element)
      if (err == 'no')
        element.remove()
    }
    function loadMoreComments(button, id, parent, answers) {
      if (button.innerHTML !== "Hide comments") {
        var iframe = document.createElement("iframe")
        iframe.frameborder = 0
        iframe.marginwidth = 0
        iframe.marginheight = 0
        iframe.scrolling = "NO"
        iframe.width = "100%"
        iframe.src = "/getAnswers?postId=" + id.toString() + "&parent=" + parent + "&level=<%=level%>"
        iframe.addEventListener('load', () => {
          resizeIframe(iframe)
          if (iframe.contentWindow.document.body.innerHTML === 'no')
            iframe.remove()
        })
        answers.before(iframe)
        button.remove()
      }
    }
    // Update post height every 100 ms
    setInterval(function() {
      let iframes = document.getElementsByTagName('iframe')
      for (let i = 0; i < iframes.length; i++)
        resizeIframe(iframes[i])
    }, 100);
  </script>
<body>
<% if (answers != undefined) { %>
<% for (var j = 0; j < answers.length; j++) { %>
     <!-- <div class="container row comment">
        <div class="media g-mb-30 media-comment">-->
     <div class="comment">
       <div class="">

            <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
              <div class="proper_comment_margin">
                <% if (isAdmin) { %>
                <form action="/deleteAnswer">
                  <input name="answerId" value="<%= answers[j]._id%>" hidden>
                  <button class="btn btn-outline-danger" type="submit"><i class="fa-solid fa-xmark"></i></button>
                </form>
                <% } %>
                <img src="/avatar?src=<%=answers[j].user.login%>&ext=<%=answers[j].user.avatarExtension%>" class="avatar d-flex g-width-50 g-height-50 rounded-circle g-mt-3 g-mr-15" alt="<%=answers[j].user%>" style="display: inline!important;">

                <h5 style="display: inline;" class="h5 g-color-gray-dark-v1 mb-0"><%=answers[j].user.login%></h5>
                <div style="display: inline; margin-left:4%" class="g-color-gray-dark-v4 g-font-size-12"><%=answers[j].timeAgo%></div>
              </div>

              <p class="proper_right_left_margin"><%-answers[j].src%></p>

              <ul class="list-inline d-sm-flex my-0 proper_comment_margin">
                <li class="list-inline-item g-mr-20">
                  <a type="button" class="btn btn-outline-primary" href="/dlike?id=<%=answers[j]._id%>&type=answer&likeType=like">
                    <i class="fa-solid fa-angle-up"></i>
                    <%=answers[j].likes.length%>
                  </a>
                </li>
                <li class="list-inline-item g-mr-20">
                  <a type="button" class="btn btn-outline-dark" href="/dlike?id=<%=answers[j]._id%>&type=answer&likeType=dislike">
                    <i class="fa-solid fa-angle-down"></i>
                    <%=answers[j].dislikes.length%>
                  </a>
                </li>
                <li class="list-inline-item ml-auto">
                  <!-- Create Answer -->
                  <form action="/createAnswer" method="post" class="row g-2">
                    <input type="text" name="url" value="<%=url%>>&show=true" hidden>
                    <input type="value" name="id" value="<%=answers[j].postId%>" style="display: none;">
                    <input type="value" name="parent" value="<%=answers[j]._id%>" style="display: none;">
                    <input type="text" name="src" class="form-control" placeholder="Write Your Answer to the Question">
                    <span class="input-group-btn"></span>
                    <button class="btn btn-primary" style="display:inline;">Relpy</button>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        <div class="answers" style="direction: ltr; overflow-x: auto">
          <!-- Load Comments -->
          </div>
          <button id="show" type="button" onclick="loadMoreComments(this, '<%=answers[j].postId%>', '<%=answers[j]._id%>', this);" class="btn btn-secondary center_button_comments d-grid" name="Load_more_comments">
            Load more comments
            <script>noComments(document.currentScript.parentNode, '<%=answers[j].postId%>', '<%=answers[j]._id%>')</script>
          </button>
          </div>
        </div>
</div>
<% }; %>
<%};%>

</body>
